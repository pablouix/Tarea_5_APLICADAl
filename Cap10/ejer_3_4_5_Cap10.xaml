<Window x:Class="todosEjercicios.Cap10.ejer_3_4_5_Cap10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todosEjercicios.Cap10"
        mc:Ignorable="d"
        Title="Poligonos" Height="330" Width="340">
    <Grid>
        <StackPanel Margin="16">
            <TextBlock Text="Poligonos" FontSize="18" />

            <TextBlock Text="Numero de lado" />
            <TextBox x:Name="TextBoxLado"/>

            <TextBlock Text="Angulo"/>
            <TextBox x:Name="TextBoxAngulo"/>

            <Button Content="Agregar" Click="Click_btnAgregar"/>
            <Button Content="Limpiar" Click="Click_btnLimpiar"/>

            <ListBox x:Name="ListBoxPoligonos" Height="120" />
        </StackPanel>
    </Grid>
</Window>
