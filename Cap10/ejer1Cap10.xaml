<Window x:Class="todosEjercicios.Cap10.ejer1Cap10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todosEjercicios.Cap10"
        mc:Ignorable="d"
        Title="Inventario" Height="400" Width="300">
    <Grid>
        <StackPanel Margin="16">
            <TextBlock Text="Articulo" FontSize="18" />
            <TextBlock Text="Id" />
            <TextBox x:Name="TextBoxProductoId"/>

            <TextBlock Text="Nombre"/>
            <TextBox x:Name="TextBoxNombre"/>

            <TextBlock Text="Precio"/>
            <TextBox x:Name="TextBoxPrecio"/>

            <TextBlock Text="Existencia"/>
            <TextBox x:Name="TextBoxExistencia"/>

            <Button Content="Agregar" Click="Click_btnAgregar"/>
            <Button Content="Limpiar" Click="Click_btnLimpiar"/>

            <ListBox x:Name="ListBoxProductos" Height="120" />
        </StackPanel>
    </Grid>
</Window>
