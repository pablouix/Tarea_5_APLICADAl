<Window x:Class="todosEjercicios.Cap10.ejer2Cap10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:todosEjercicios.Cap10"
        mc:Ignorable="d"
        Title="Informacion de estudiantes" Height="440" Width="340">
    <Grid>
        <StackPanel Margin="16">
            <TextBlock Text="Estudiante" FontSize="18" />
            <TextBlock Text="Id" />
            <TextBox x:Name="TextBoxId"/>

            <TextBlock Text="Nombre"/>
            <TextBox x:Name="TextBoxNombre"/>

            <TextBlock Text="Telefono"/>
            <TextBox x:Name="TextBoxTelefono"/>

            <TextBlock Text="Edad"/>
            <TextBox x:Name="TextBoxEdad"/>

            <TextBlock Text="Grado"/>
            <TextBox x:Name="TextBoxGrado"/>

            <Button Content="Agregar" Click="Click_btnAgregar"/>
            <Button Content="Limpiar" Click="Click_btnLimpiar"/>

            <ListBox x:Name="ListBoxProductos" Height="120" />
        </StackPanel>
    </Grid>
</Window>
